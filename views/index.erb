        <title>Motivational Posters</title>
    </head>
    <body>
        <header>
          <h1 id="title">Make a Poster!<h1>
        </header>
    <section id="select-image">
          <h2>Step 1. Pick an image </h2>
          <p>Enter the keyword to search for images </p>
          <input id="search-term" type="text" value="dead cartoon cat">
            <button id="go-search">Go!</button>
          <div id="search-results"></div>
          <div id="branding"></div>
    </section>
    <section id="add-text">
          <h2>Step 2. Add a message</h2>
          <input id="text" type="text" value="Chloe KILLED the Cat">
    </section>
    <section id="style-image">
        <h2>Step 3. Style it!</h2>
        <div id="workspace">
            <p id="caption"></p>
        </div>
        <div id="controls">
            Left: <input type="number" value="60" id="left">
            Top: <input type="number" value="20" id="top">
            Width: <input type="number" value="520" id="width">
            Size: <input type="number" value="35" id="size">
            Colour: <select id="colour">
                      <option>Red</option>
                      <option>Green</option>
                      <option>White</option>
                      <option>Black</option>
                      <option>Blue</option>
                      <option>Yellow</option>
                      <option>Gray</option>
                      <option>Orange</option>
                      </select>
            Align: <select id="align">
                      <option>Right</option>
                      <option>Center</option>
                      <option>Left</option>
                    </select>
        </div>
        <div id="twitter">
            <a href="https://twitter.com/share" class="twitter-share-button" data-text="Today I built this @makersacademy" data-via="ThisIsChloeD">Tweet</a>
